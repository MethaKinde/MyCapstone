@model MyChurch.Models.Leader

@{
    ViewBag.Title = "Details";
}

<div class="container" style="margin-top:150px;">
    <div><a class="welcome-btn" href="@Url.Action("Index")" style="color: inherit; text-decoration: none; font-size: 0.9rem;" onmouseover="this.style.color='white';" onmouseout="this.style.color='inherit';"><i class="fa fa-caret-left me-2"></i>Back</a></div>
    <div class="row mt-5" style="margin-bottom: 50px;">
        <div class="col-md-4 d-flex flex-column justify-content-between">
            <div class="leaderTitle">
                <div class="fs-2 mb-1 text-white">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.Lastname)</div>
                <div>@Html.DisplayFor(model => model.Ministry1.MinistryType)</div>
            </div>
            <div class="leaderContact text-white mt-2">@Html.DisplayFor(model => model.Email)</div>
            <div class="leaderBio text-white pt-4">
                <p>
                    @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.Lastname) is the @Html.DisplayFor(model => model.Ministry1.MinistryType) of Tree of Life Church in Los Angeles, California.
                </p>
                <p>
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam id justo ac lorem malesuada vestibulum. Ut
                    convallis odio nec lectus ullamcorper, eget commodo nisl sodales. Integer a lectus nec lacus eleifend
                    feugiat.
                </p>
                <p>
                    @Html.DisplayFor(model => model.FirstName) serves a growning number of churches partnered for revival. Suspendisse potenti. Proin tempor sagittis suscipit.
                </p>
            </div>
            @if (HttpContext.Current.User.IsInRole("Admin"))
            {
                <div>@Html.ActionLink("Edit", "Edit", new { id = Model.IDLeader })</div>
            }
        </div>
        <div class="col-md-8">
            <div style="width: 660px; height: auto; object-fit: cover; overflow: hidden;">
                <img src="~/Assets/img/@Html.DisplayFor(model => model.Photo)" style="max-width: 100%; height:auto;" />
            </div>
        </div>
    </div>
</div>
