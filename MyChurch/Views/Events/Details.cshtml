@model MyChurch.Models.Event

@{
    ViewBag.Title = "Details";
}

<div style="background-color: #f4d4b7; padding-top: 165px; height: auto; padding-bottom: 80px;">
    <div class="container">
        <div><a class="welcome-btn" href="@Url.Action("Index")" style="color: inherit; text-decoration: none; font-size: 0.9rem;" onmouseover="this.style.color='white';" onmouseout="this.style.color='inherit';"><i class="fa fa-caret-left me-2"></i>Back</a></div>
        <div class="row mt-5" style="padding-bottom: 50px;">
            <div class="col-md-7">
                <div style="width: 660px; height: auto; object-fit: cover; overflow: hidden;">
                    <img src="~/Assets/img/@Html.DisplayFor(model => model.FlyerEvent)" style="max-width: 100%; height:auto;" />
                </div>
            </div>
            <div class="col-md-5 d-flex flex-column justify-content-between">
                <div class="leaderTitle">
                    <div class="fs-2 mb-2">@Html.DisplayFor(model => model.Title)</div>
                    <div>@Html.DisplayFor(model => model.EventType.EventType1)</div>
                </div>
                <div class="leaderContact">@Html.DisplayFor(model => model.Description)</div>
                @if (HttpContext.Current.User.IsInRole("Admin"))
                {
                    <div class="d-flex justify-content-between">
                        <div>@Html.ActionLink("Edit", "Edit", new { id = Model.IDEvent })</div>
                        <div>@Html.ActionLink("Delete", "Delete", new { id = Model.IDEvent }, new { @class = "text-danger" })</div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>