<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-7hUpOZrHbH6gj3JTG/As/SRTIDg4C3kZy3nDMeXNbOgNtqCL3KL9XDeIJmdHR8yYj5h2K3O/BZWl7EFKte9DEw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/StyleSheet1.css" />
    <link rel="stylesheet" href="~/Content/StyleSheet2.css" />
    <link rel="stylesheet" href="~/Content/StyleSheetForm.css" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-white bg-white navigation py-3">
        <div class="container">
            @Html.ActionLink("Tree of Life Church", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Attiva/Disattiva spostamento" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Events", "Index", "Events", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Leadership", "Index", "Leaders", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Give", "GivePage", "Donations", new { area = "" }, new { @class = "nav-link" })</li>
                    @*<li>@Html.ActionLink("Store", "Index", "Store", new { area = "" }, new { @class = "nav-link" })</li>*@
                    @if (HttpContext.Current.User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Members", "Index", "Members", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
                @if (Request.IsAuthenticated)
                {
                    <div class="d-flex align-items-center">
                        <p class="m-0 me-3">Benvenuto, @Session["UserN"]</p>
                        <a href="@Url.Action("Logout", "Auth")" class="btn btn-danger">Logout</a>
                    </div>
                }
                else
                {
                    <a class="welcome-btn" href="@Url.Action("Login", "Auth")" style="color: inherit; text-decoration: none;"><i class="bi bi-person-circle m-3"></i>Login</a>
                }
            </div>
        </div>
    </nav>
    <div class="body-content1">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Applicazione ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        /* Toggle between adding and removing the "responsive" class to topnav when the user clicks on the icon */
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
    <script src="~/Content/PaymentScript.js"></script>
</body>
</html>
